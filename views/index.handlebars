<div class="jumbotron">
  <h1 class="display-3 text-center mb-4">Eat-Da-Burger!</h1>

  <div class="container">
    <div class="row">
      <div class="col-6">
        <ol class="list-group">
          <lh class="lead text-center">TO BE DEVOURED</lh>
          {{#each burgers}}
            {{#unless devoured}}
              {{> burgers/burger-block devoured=false}}
            {{/unless}}
          {{/each}}
        </ol>
      </div>

      <div class="col-6">
        <ol class="list-group">
          <lh class="lead text-center">DEVOURED</lh>
          {{#each burgers}}
            {{#if devoured}}
              {{> burgers/burger-block devoured=true}}
            {{/if}}
          {{/each}}
        </ol>
      </div>
    </div>
  </div>

  <form class="create-form">

    <div class="form-group mt-4">
      <input class="form-control form-control-lg" type="text" id="burger-input" name="burger_input">
    </div>
    <div class="text-center">
      <button type="submit" class="btn btn-primary btn-lg">ADD BURGER</button>
    </div>
  </form>
</div>